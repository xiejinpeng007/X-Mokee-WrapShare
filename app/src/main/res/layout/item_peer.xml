<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/item_background_rounded"
    android:foreground="@drawable/item_foreground_rounded"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/peer_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:contentDescription="device type"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/colorOnBackground"
        tools:src="@drawable/ic_apple_24dp" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        app:indicatorSize="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/peer_icon"
        app:layout_constraintStart_toStartOf="@id/peer_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:indeterminate="false"
        tools:max="100"
        tools:progress="75" />


    <TextView
        android:id="@+id/text_peer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/colorOnBackground"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/text_status"
        app:layout_constraintEnd_toStartOf="@id/btn_cancel"
        app:layout_constraintStart_toEndOf="@id/peer_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="XiNGRZ\'s iPhone" />

    <TextView
        android:id="@+id/text_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_cancel"
        app:layout_constraintStart_toEndOf="@id/peer_icon"
        app:layout_constraintTop_toBottomOf="@id/text_peer_name"
        tools:text="Sendingâ€¦"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/btn_cancel"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="@android:string/cancel"
        android:foreground="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_cancel_black_24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/colorOnBackground"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
